{
  "llm": {
    "provider": "anthropic",
    "model": "claude-sonnet-4-20250514",
    "auth_type": "api_key",
    "api_key_env": "ANTHROPIC_API_KEY",
    "auth_token_env": "ANTHROPIC_AUTH_TOKEN"
  },
  "embedding": {
    "provider": "openai",
    "model": "text-embedding-3-small",
    "api_key_env": "OPENAI_API_KEY"
  },
  "memory": {
    "retrieve_count": 20,
    "weight_decay_rate": 0.01,
    "weight_boost": 0.05
  },
  "reflection": {
    "cycle_interval": 5,
    "prediction_delta_threshold": 0.3,
    "staleness_cycles": 10
  },
  "motivation_threshold": 0.2,
  "run": {
    "timeout_ms": null
  },
  "tools": {
    "steps": {
      "model": {
        "tools": ["read_soul", "read_values", "read_goals", "read_memories", "list_skills"],
        "required": ["read_soul", "read_values", "read_goals", "read_memories"]
      },
      "candidates": {
        "tools": ["list_skills"],
        "required": ["list_skills"]
      },
      "predict": {
        "tools": [],
        "required": []
      },
      "decide": {
        "tools": ["read_values", "read_goals", "list_skills"],
        "required": ["list_skills"]
      },
      "act": {
        "tools": ["update_goal_status", "invoke_skill", "create_skill", "record_memory"],
        "required": []
      },
      "record": {
        "tools": [],
        "required": []
      },
      "review": {
        "tools": ["read_soul", "read_values", "read_goals", "read_memories", "list_skills"],
        "required": ["read_soul", "read_memories", "read_values", "read_goals"]
      },
      "ask": {
        "tools": ["read_soul", "read_values", "read_goals", "read_memories"],
        "required": []
      },
      "evolve": {
        "tools": ["write_soul", "update_value", "update_goal", "record_memory"],
        "required": ["record_memory"]
      },
      "explore": {
        "tools": ["read_soul", "read_values", "read_goals", "read_memories", "record_memory"],
        "required": ["read_memories", "record_memory"]
      }
    }
  }
}
